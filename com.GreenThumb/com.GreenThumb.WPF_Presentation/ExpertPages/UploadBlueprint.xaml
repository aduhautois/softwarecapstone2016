        <Label Content="Title" HorizontalAlignment="Left" Margin="33,65,0,0" VerticalAlignment="Top"/>
        <Label Content="Description" HorizontalAlignment="Left" Margin="33,123,0,0" VerticalAlignment="Top"/>
