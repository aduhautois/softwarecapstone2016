@using com.GreenThumb.BusinessObjects;
@model IEnumerable<GroupNeedSummary>

@{
    ViewBag.Title = "Index";
}

<h1>Help us out!</h1>
<div class="dark-div round">

    <h3 class="inline-block">Donate to our PayPal</h3>
    <img class="small-image inline-block" src="http://www.pixeledpaper.com/shared/img/hand.png" />
    <br />
    <br />
    <p>Donate to our PayPal for an easy way to contribute to our community gardens!</p>
    <br />
    <form class="donate-form double-indent" action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
        <input type="hidden" name="cmd" value="_s-xclick">
        <input type="hidden" name="encrypted" value="-----BEGIN PKCS7----------END PKCS7-----
">
        <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
        <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
    </form>

    <br />
    <br />
    <button class="green-btn" onclick="location.href='@Url.Action("ViewContributions","Donation")'">View Your Contributions</button>
    @if (0 < Model.Count())
    {
        foreach (GroupNeedSummary summary in Model)
        {
            <div class="group-members">
                <h2>@Html.ActionLink(summary.GroupName, "ViewGroupNeeds", "Donation", new { id = summary.GroupID }, null)</h2>
                <p class="text-right">Leader: @summary.GroupLeader.UserName</p>
                <div class="indent">
                    <h2>Active Needs</h2>
                    <p>@summary.ActiveNeeds</p>
                    <h2>Completed Needs</h2>
                    <p>@summary.CompletedNeeds</p>
                </div>
            </div>
        }
    }
    else
    {
        <div>
            <p>No needs found!</p>
        </div>
    }
</div>
