@model IEnumerable<com.GreenThumb.BusinessObjects.Group>

@{
    ViewBag.Title = "Gardens";
}

<div class="row">
    <div class="col-sm-12 col-lg-12">
        <h1>Gardens</h1>
    </div>
</div>

@if (Model.Count() != 0)
{
<div class="row round dark-div">
    <div class="col-lg-12">
        <h3 class="inline-block">My Gardens</h3>
        <img class="inline-block small-image" src="http://www.pixeledpaper.com/shared/img/minisprout.png" />
        <br />
        <br />
        <p>Gardens I belong to, by group:</p>
        @foreach (com.GreenThumb.BusinessObjects.Group group in Model)
        {
            <div class="UserGardensTable">
                @Html.Partial("~/Views/PartialViews/Group_GardenTable.cshtml", group)
            </div>

        }
    </div>
</div>
}
else
{
    <div class="dark-div round">
        <h3>You have no gardens.</h3>
        <p>Would you like to donate or join a group?</p>
        <br />
        <button class="green-btn" onclick="location.href='@Url.Action("Index", "Group")'">Groups</button>
        <br />
        <button class="green-btn" onclick="location.href='@Url.Action("Index", "Donation")'">Donate</button>
    </div>

}

