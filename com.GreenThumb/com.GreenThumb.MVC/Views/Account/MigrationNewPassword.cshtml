@model com.GreenThumb.MVC.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Create Password";
}

<h1>@ViewBag.Title</h1>
<div class="dark-div round">
    <p class="text-info">
        Opps! Looks like your old password doesn't follow our system's rules. Please change your password here.
    </p>

    @using (Html.BeginForm("MigrationNewPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        <p class="text-danger">@ViewBag.PasswordError</p>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.UserName)
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Set password" class="green-btn" />
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}