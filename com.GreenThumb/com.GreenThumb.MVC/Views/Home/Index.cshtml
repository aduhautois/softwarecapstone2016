@{
    ViewBag.Title = "Home Page";
}

<div class="home-intro">
    <h1 class="text-center">Welcome to GreenThumb.</h1>
    <h3 class="text-center">a community garden project</h3>
    <img class="logo" src="http://www.pixeledpaper.com/shared/img/farmlogo.png" />
</div>

<div class="row home-intro-div">
    <div class="dark-div round col-lg-4 col-md-6 col-sm-11 center-block">

        <ul class="list-unstyled">
            @{ 
                if (User.Identity.IsAuthenticated)
                {
                <li class="text-center"><h3>Announcements</h3></li>
                    var al10 = ViewBag.Announcements;
                    foreach (var a in al10)
                    {
                    <li class="text-center" style="padding-bottom: 1em;"> @a.Announcement </li>
                    }
                }
                else
                {
                   <li class="text-center"><h3>Welcome!</h3></li>
                   <li class="text-center">Please log in to continue.</li>
                }

            }


        </ul>

    </div>
</div>